<%= form_for @order, url: update_cart_path, html: { id: 'update-cart' }, remote: true do |order_form| %>
  <% if @from_undo && @render_slider_partial.blank? %>
    <%= render 'spree/orders/cart_v2_product', line_item: line_item, order_form: order_form, quantity_change: true   %>
  <% else %>
      <%= render partial: 'spree/orders/cart_v2_product', collection: order_form.object.line_items, as: :line_item, locals: { order_form: order_form, quantity_change: true }  %>
  <% end %>
<%end%>

