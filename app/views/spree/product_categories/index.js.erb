var data = '';

<% @product_cards.each do |product| %>
  data += '<%= j render(partial: "spree/shared/standard_product_card", locals: { product: product }) %>';
<% end %>

$('#cards').html(data);

$('#newest-section').html('<%= j (paginate(@products, :remote => true, left: 3, right: 1, window: 1)) %>');

$('html, body').animate({
  scrollTop: $("#newest-products").offset().top
}, 800);

