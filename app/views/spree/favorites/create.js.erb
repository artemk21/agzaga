<% if @favorite.persisted? %>
  if ( $('.orders.edit').length == 0 ) {
    var $el = $(".favorable_<%= @favorite.favorable_type.demodulize.underscore %>_<%= @favorite.favorable_id %>");

    $el.each(function( index, element ) {
      element.href = '<%= favorite_path(@favorite, favorable_id: @favorite.favorable_id, favorable_type: @favorite.favorable_type) %>';
      element.dataset.method = 'delete';
    });

  } else {
    location.reload();
  }

  window.$('#slider-adc-form').html("<%= j render 'spree/shared/slider_v2' %>");
<% end %>

