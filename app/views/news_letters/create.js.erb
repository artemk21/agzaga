<% if @error_message.blank? && @ffa_susbscription %>
{
  $('#mailing-subscription-section').html("<%= j render 'spree/ffa_home/partials/subscription' %>");
}
<% elsif @error_message.blank?  %>
{
  $('.footer_news_letter_error_v2').empty();
  $('.email-input-news-letter').hide();
  $('.submit-btn-news-letter').addClass('subscribed').text('You're Subscribed').prop("disabled", true);
}
<% elsif @error_message.include?('cannot be subscribed') %>
{
  $('.email-input-news-letter').addClass('error');
  $('.footer_news_letter_error_v2').text("Email already taken can't be subscribed");
}
<% else %>
{
  $('.email-input-news-letter').addClass('error');
  $('.footer_news_letter_error_v2').text("Please enter valid email");
}
<% end %>

